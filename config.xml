<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.atomicbubble.spin"
        versionCode = "3" 
        version     = "3.0.0" >
    <name>StarSpin</name>
    <description>
        StarSpin
    </description>
	<preference name="orientation" value="portrait" />
	<preference name="permissions" value="none" />
	<preference name="fullscreen" value="true" />
	<gap:plugin name="org.apache.cordova.splashscreen" />
	<gap:plugin name="org.apache.cordova.device" version="0.2.3" />
	<gap:plugin name="com.rjfun.cordova.plugin.lowlatencyaudio" version="1.0" />
	<gap:plugin name="com.cranberrygame.cordova.plugin.game" source="plugins.cordova.io" >
    <param name="APP_ID" value="342037593544" />
	</gap:plugin>

	
    <icon src="res/icon/mipmap-mdpi/ic_launcher.png"  gap:platform="android"   gap:density="hdpi" />
    <icon src="res/icon/mipmap-hdpi/ic_launcher.png"  gap:platform="android"   gap:density="mdpi" />
    <icon src="res/icon/mipmap-xhdpi/ic_launcher.png"  gap:platform="android"   gap:density="xhdpi" />
    <icon src="res/icon/mipmap-xxhdpi/ic_launcher.png"  gap:platform="android"   gap:density="xxhdpi" />
	
	<gap:splash src="res/splash/drawable-ldpi/splash.png"  gap:platform="android" gap:density="ldpi" />
	<gap:splash src="res/splash/drawable-mdpi/splash.png"  gap:platform="android" gap:density="mdpi" />
	<gap:splash src="res/splash/drawable-hdpi/splash.png"  gap:platform="android" gap:density="hdpi" />
	<gap:splash src="res/splash/drawable-xhdpi/splash.png"  gap:platform="android" gap:density="xhdpi" />
	
	<access origin="*"/>
</widget>
